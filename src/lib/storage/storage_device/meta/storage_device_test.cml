{
    include: [ "sdk/lib/diagnostics/syslog/client.shard.cml" ],
    program: {
        runner: "rust_test_runner",
        binary: "bin/storage_device_lib_test",
    },
    capabilities: [
        { protocol: "fuchsia.test.Suite" },
    ],
    use: [
        {
            storage: "temp",
            path: "/tmp",
        },
    ],
    expose: [
        {
            protocol: "fuchsia.test.Suite",
            from: "self",
        },
    ],
}
